var serverNode = preload(\"res://resources/scenes/playerServer.tscn\")
var clientNode = preload(\"res://resources/scenes/playerClient.tscn\")
var charNode = preload(\"res://resources/scenes/character.tscn\")

func createPlayer(peerPressure):
	var newPlayerNode = charNode.instantiate()
	newPlayerNode.set(\"name\",str(peerPressure))
	print(\"PEER ID:\",peerPressure)
	return newPlayerNode

func _ready() -> void:
	multiplayer.multiplayer_peer = null
	playerSpawner.spawn_function = createPlayer

func _on_join_pressed() -> void:
	if not canFunction: return
	multiplayer.multiplayer_peer = null
	canFunction = false
	peer = ENetMultiplayerPeer.new()
	peer.create_client(address,port)
	multiplayer.multiplayer_peer = peer
	
